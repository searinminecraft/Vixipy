{% extends "layouts/error_full.html.j2" %}
{% set title = error.code|string + " " + error.name %}

{% block content %}
<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 4a2 2 0 00-2 2v6.5a2 2 0 104 0V6a2 2 0 00-2-2zm2.25 13.75a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"/></svg>
<h1>{{error.code}}: {{error.name}}</h1>
<p>{{error.description}}</p>

<a id="back" class="label-button">{{_("Go back")}}</a>

<script>
    document.getElementById("back").onclick = (e)=>{
        e.preventDefault();
        history.back();
        window.close();
    }
</script>
{% endblock %}
